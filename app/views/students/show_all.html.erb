<h1>All Students</h1>

<table border="1">
<tr>
    <td>name</td>
    <td>dob</td>
    <td>email</td>

  </tr>
<% @students.each do |student| %>
	<tr>
     		
     <td> <%= student.student_name %></td>
      
      <td> <%= student.dob %></td>
     <td> <%= student.email %></td>
      <td><%= link_to 'Destroy', student_path(student),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td><br>
 </tr>
	<%end%>
</table>
<%= link_to "back to add student" , new_student_path %>
<%= link_to "sign out",destroy_user_session_path,method: "delete"%>